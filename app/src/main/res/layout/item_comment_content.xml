<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/item_comment_big_avatar_1"
        android:id="@+id/item_comment_big_avatar_1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:text="用户名"
        android:id="@+id/item_comment_name"
        android:layout_toEndOf="@+id/item_comment_big_avatar_1"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/item_comment_big_avatar_1"
        android:layout_marginTop="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_name"
        android:text="6小时前"
        android:textSize="10sp"
        android:textColor="@color/textNoneBlack"
        android:layout_alignStart="@+id/item_comment_name"
        android:id="@+id/item_comment_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="特别喜欢这栋房子。"
        android:textColor="@color/textRegularBlack"
        android:layout_below="@+id/item_comment_time"
        android:layout_marginTop="11dp"
        android:layout_alignStart="@+id/item_comment_time"
        />

</RelativeLayout>