<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="239dp"
    android:layout_height="295dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/login_logo"
    android:layout_marginTop="16dp"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="34dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80c6eb">
        <EditText
            android:layout_width="181dp"
            android:layout_height="42dp"
            android:background="@color/totalWhite"
            android:inputType="textEmailAddress"
            android:textColorHint="#909090"
            android:paddingStart="12sp"
            android:layout_marginTop="33dp"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/textRegularBlack"
            android:singleLine="true"
            android:id="@+id/editText_register_mail"
            android:hint="输入注册邮箱"
            />

        <EditText
            android:layout_width="181dp"
            android:layout_height="42dp"
            android:background="@color/totalWhite"
            android:inputType="textPersonName"
            android:hint="注册用户名"
            android:textColorHint="#909090"
            android:paddingStart="12sp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText_register_name"
            android:layout_marginTop="19dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="@color/textRegularBlack"
            android:layout_below="@+id/editText_register_mail"/>

        <EditText
            android:layout_width="181dp"
            android:layout_height="42dp"
            android:background="@color/totalWhite"
            android:inputType="textPersonName"
            android:hint="注册密码"
            android:textColorHint="#909090"
            android:paddingStart="12sp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText_register_password"
            android:layout_marginTop="19dp"
            android:textSize="12sp"
            android:textColor="@color/textRegularBlack"
            android:singleLine="true"
            android:layout_below="@+id/editText_register_name"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:id="@+id/register_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注 册"
                android:textSize="20sp"
                android:textColor="#80c6eb"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>