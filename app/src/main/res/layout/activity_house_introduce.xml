<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:paddingBottom="8dp"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/totalWhite"
            android:elevation="1dp"
            android:orientation="vertical">
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/roll_view_pager_introduce"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                app:rollviewpager_play_delay="3000">
            </com.jude.rollviewpager.RollPagerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77dp">
                <ImageView
                    android:layout_width="241dp"
                    android:layout_height="46dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_label01"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/item_labels"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout_three_avatar">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/item_comment_avatar01"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/item_comment_avatar02"
                            android:layout_marginStart="6dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/item_comment_avatar03"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0个人评价"
                        android:textSize="12sp"
                        android:textColor="@color/textLittleBlack"
                        android:layout_below="@+id/linearLayout_three_avatar"
                        android:layout_marginTop="6dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="24dp"
                    android:gravity="center_vertical"
                    android:id="@+id/item_master_name_button">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/introduce_message"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:textSize="12sp"
                        android:textColor="@color/textLittleBlack"
                        android:text="雇主：名称暂无"
                        android:id="@+id/item_master_name"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="24dp"
                    android:gravity="center_vertical"
                    android:id="@+id/item_map_location_button">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/introduce_map"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:textSize="12sp"
                        android:textColor="@color/textLittleBlack"
                        android:text="地点暂无"
                        android:id="@+id/item_map_location_text"
                        android:singleLine="true"
                        android:maxEms="8"
                        android:ellipsize="marquee"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="精选房源"
            android:textColor="@color/textRegularBlack"
            android:textSize="10sp"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:scrollbars="none">
            <include layout="@layout/content_main_roommate"/>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/totalWhite">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_comment_icon"
                android:layout_centerVertical="true"
                android:id="@+id/item_comment_icon"
                android:layout_marginStart="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="评论"
                android:textColor="@color/textLittleBlack"
                android:layout_toEndOf="@+id/item_comment_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:background="@color/totalWhite"
            android:id="@+id/item_comment_list"
            android:orientation="vertical"
            android:showDividers="beginning">
            <include layout="@layout/item_comment_content"/>
            <include layout="@layout/item_comment_content"/>
            <include layout="@layout/item_comment_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
