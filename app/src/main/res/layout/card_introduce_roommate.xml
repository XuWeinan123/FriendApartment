<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="164dp"
        android:layout_height="177dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:id="@+id/card_introduce_roommate_avatar"
                android:src="@mipmap/card_introduce_roommate_avatar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄逍"
                android:textColor="@color/textRegularBlack"
                android:textSize="12sp"
                android:layout_alignTop="@+id/card_introduce_roommate_avatar"
                android:layout_toEndOf="@+id/card_introduce_roommate_avatar"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相似度：65%"
                android:textColor="@color/textNoneBlack"
                android:textSize="8sp"
                android:layout_alignBottom="@+id/card_introduce_roommate_avatar"
                android:layout_toEndOf="@+id/card_introduce_roommate_avatar"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="9dp"/>

            <ImageView
                android:layout_width="131dp"
                android:layout_height="56dp"
                android:src="@color/colorPrimaryDark"
                android:layout_below="@+id/card_introduce_roommate_avatar"
                android:layout_alignStart="@+id/card_introduce_roommate_avatar"
                android:layout_marginTop="16dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/introduce_message"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发送消息"
                        android:textSize="8dp"
                        android:textColor="#33b033"
                        android:layout_marginStart="4dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>